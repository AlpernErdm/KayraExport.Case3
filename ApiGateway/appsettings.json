{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "https://kayraexport.com",
    "Audience": "https://kayraexport.com"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/product/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/product/{**catch-all}"
          }
        ]
      },
      "log-route": {
        "ClusterId": "log-cluster",
        "Match": {
          "Path": "/api/log/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/log/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "https://localhost:7001"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-destination": {
            "Address": "https://localhost:7002"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "log-cluster": {
        "Destinations": {
          "log-destination": {
            "Address": "https://localhost:7003"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  }
}
